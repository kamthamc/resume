{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["./node_modules/@types", "./typings/**/*.d.ts"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
